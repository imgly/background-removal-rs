    "raw_formats": {
      "description": "Raw image format support and color space handling",
      "target_accuracy": 0.90,
      "edge_accuracy_threshold": 0.85,
      "performance_baseline_ms": 1500,
      "test_cases": [
        {
          "id": "raw_001",
          "name": "RGB24 Portrait BT.709",
          "input_file": "raw_rgb24_portrait_bt709.raw",
          "input_metadata": {
            "width": 1920,
            "height": 1080,
            "pixel_format": "RGB24",
            "color_space": "BT.709",
            "stride": 5760
          },
          "validation_criteria": {
            "pixel_accuracy_min": 0.90,
            "edge_accuracy_min": 0.85,
            "processing_time_max_ms": 1800
          },
          "expected_outputs": {
            "rgba32_raw": "raw_rgb24_portrait_bt709_alpha.rgba",
            "png_alpha": "raw_rgb24_portrait_bt709_alpha.png",
            "mask_only": "raw_rgb24_portrait_bt709_mask.raw"
          }
        },
        {
          "id": "raw_002",
          "name": "YUV420P Portrait BT.601",
          "input_file": "raw_yuv420_portrait_bt601.raw",
          "input_metadata": {
            "width": 1920,
            "height": 1080,
            "pixel_format": "YUV420P",
            "color_space": "BT.601",
            "stride": 1920
          },
          "validation_criteria": {
            "pixel_accuracy_min": 0.88,
            "edge_accuracy_min": 0.80,
            "processing_time_max_ms": 2200
          },
          "expected_outputs": {
            "rgb24_raw": "raw_yuv420_portrait_bt601_alpha.rgb",
            "png_alpha": "raw_yuv420_portrait_bt601_alpha.png",
            "mask_only": "raw_yuv420_portrait_bt601_mask.raw"
          }
        }
      ]
    }
  },
  "global_validation_rules": {
    "output_format_requirements": {
      "png_alpha": {
        "format": "PNG",
        "channels": 4,
        "alpha_channel_required": true,
        "bit_depth": 8
      },
      "jpeg_white_bg": {
        "format": "JPEG",
        "channels": 3,
        "background_color": [255, 255, 255],
        "quality_min": 85
      },
      "webp_alpha": {
        "format": "WebP",
        "channels": 4,
        "alpha_channel_required": true,
        "quality_min": 80
      },
      "mask_only": {
        "format": "PNG",
        "channels": 1,
        "bit_depth": 8,
        "value_range": [0, 255]
      }
    },
    "performance_requirements": {
      "memory_usage_max_mb": 500,
      "cpu_usage_max_percent": 95,
      "concurrent_processing_supported": true,
      "timeout_seconds": 30
    },
    "accuracy_requirements": {
      "pixel_tolerance": 5,
      "edge_detection_kernel_size": 3,
      "structural_similarity_min": 0.85,
      "mean_squared_error_max": 100
    }
  }
}